<TodasVendasPage>:

    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'icones/fundotela2.png'
        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'icones/botaofinoroxo.png'
            pos_hint:{'right': 0.85, 'top': 0.95 }
            size_hint:0.7, 0.2
            text: 'Total de Vendas: R$ 1'
            id: label_total_vendas
            markup: True

        ScrollView:
            pos_hint:{'right': 1, 'top': 0.75 }
            size_hint:1, 0.63
            GridLayout:
                cols: 1
                id: lista_vendas

                # parametros padroes para scroll vertical
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: '90dp'
                row_force_default: True

     # botao voltar
        FloatLayout
            pos_hint:{'right': 1, 'top': 0.12 }
            size_hint:1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex('#6C6373')
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint:{'right':0.2, 'top':0.9}
                size_hint: 0.2, 0.8
                source: 'icones/voltar.png'
                on_release: app.sair_todas_vendas('ajustespage')